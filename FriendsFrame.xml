					</OnLeave>
					<OnClick>
						ToggleFriendsFrame(1);
					<OnClick/>
				</Scripts>
			</Button> -->
			<Frame name="$parentGlowFrame" setAllPoints="true" virtual="true" hidden="true">
				<Layers>
					<Layer level="OVERLAY">
						<Texture name="$parentGlow" file="Interface\AddOns\FriendsFrame\Textures\UI-Toast-Flair" alphaMode="ADD" >
							<Size>
								<AbsDimension x="252" y="56"/>
							</Size>
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="-1" y="3"/>
								</Anchor>
								<Anchor point="BOTTOMRIGHT">
									<Offset x="1" y="-3"/>
								</Anchor>
							</Anchors>
<!-- 							<Animations>
								<AnimationGroup name="$parentAnimIn" parentKey="animIn">
									<Alpha change="1" duration="0.2" order="1"/>
									<Alpha change="-1" duration="0.5" order="2"/>
									<Scripts>
										<OnFinished>
											self:GetParent():Hide();
										</OnFinished>
									</Scripts>
								</AnimationGroup>
							</Animations> -->
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Button name="$parentCloseButton">
				<Size>
					<AbsDimension x="18" y="18"/>
				</Size>
				<Anchors>
					<Anchor point="TOPRIGHT">
					<Offset>
						<AbsDimension x="-3" y="-2"/>
					</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						BNToastFrame:Hide();
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\AddOns\FriendsFrame\Textures\UI-Toast-CloseButton-Up"/>
				<PushedTexture file="Interface\AddOns\FriendsFrame\Textures\UI-Toast-CloseButton-Down"/>
				<HighlightTexture file="Interface\AddOns\FriendsFrame\Textures\UI-Toast-CloseButton-Highlight" alphaMode="ADD"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				BNet_OnLoad();
			</OnLoad>
			<OnEvent>
				BNet_OnEvent();
			</OnEvent>
			<OnUpdate>
				BNet_OnUpdate();
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
